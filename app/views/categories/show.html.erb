<div class="top-page text-center p-5">
  <h1><strong>Nos pépite de la catégorie "<%= @category.name %>"</h1>
</div>

<ul class="list-group">
  <% @category.products.each do |product| %>
    <li class="list-group-item"> 
    Nom du produit : <%= product.name %>
    Description : <%= product.description %>
    <%= link_to "Supprimer",
                  product_path(product),
                  method: :delete,
                  data: { confirm: "Êtes-vous certain.e de vousloir supprimer cette beauté ?" } %>
  <% end %>
</ul>

<br><br>
<%= link_to 'Edit', edit_category_path(@category) %>
<%= link_to 'Back', categories_path %>
<%= link_to 'Ajouter un produit', new_category_product_path(@category) %>

